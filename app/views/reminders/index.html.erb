<h1>Reminders for <%= @user.username %></h1>

<table>
  <tr>
  	<th>User</th>
    <th>Category</th>
    <th>Date</th>
    <th>Description</th>
  </tr>

<% @reminders.each do |reminder| %>
  <tr>
  	<td><%=h reminder.user_id %></td>
    <td><%=h reminder.category_id %></td>
    <td><%=h pretty_date(reminder.date) %></td>
    <td><%=h reminder.description %></td>
    <td><%= link_to 'Show', reminder %></td>
    <td><%= link_to 'Edit', edit_reminder_path(reminder) %></td>
    <td><%= link_to 'Destroy', reminder, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Profile', @user %> |
<%= link_to 'New reminder', new_reminder_path %>