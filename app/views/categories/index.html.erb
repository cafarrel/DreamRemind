<!--<h1>Categories for <%= @user.username %></h1>-->

<div class="horizontal-zebra">
  
  <p class="head"><strong>Categories</strong></p>
  <ul class="list-pin">	
	<% @user_categories.each do |category| %>	  
	  	<li class="<%= cycle("odd", "even") %>">
	  		<strong><%=h category.name %></strong> (<%= link_to 'Delete', user_category_path(@user, category), :confirm => 'Are you sure you want to delete this category?', :method => :delete %>)
		</li>	  
	<% end %>
  </ul>

</div>

<br />

<%= link_to 'Back', @user %> |
<%= link_to 'New Category', new_user_category_path(@user) %>